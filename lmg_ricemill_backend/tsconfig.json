{
  "compilerOptions": {
    "target": "ES2020", // Specify ECMAScript target version
    "module": "ESNext", // Specify module code generation
    "lib": ["ES2020", "DOM"], // Specify library files to be included
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references
    "outDir": "./dist", // Redirect output structure to the `dist` folder
    "rootDir": "./src", // Specify the root directory of input files
    "resolveJsonModule": true, // Allows importing .json files
    "baseUrl": ".", // Set base directory to root of the project
    // "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@/*": ["src/*"] // Create an alias '@' pointing to 'src'
    }
  },
  "include": ["src/**/*"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
